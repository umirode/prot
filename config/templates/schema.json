{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "Lang",
    "Modules"
  ],
  "properties": {
    "Lang": {
      "$id": "#/properties/Lang",
      "type": "string",
      "enum": [
        "go"
      ]
    },
    "Modules": {
      "$id": "#/properties/Modules",
      "type": "object",
      "default": {},
      "propertyNames": {
        "pattern": "(^[a-z]|[A-Z0-9])[a-z]*$"
      },
      "patternProperties": {
        "(^[a-z]|[A-Z0-9])[a-z]*$": {
          "$id": "#/properties/Modules/^[a-z_][a-z_]*$",
          "type": "object",
          "required": [
            "Repository"
          ],
          "properties": {
            "Repository": {
              "$id": "#/properties/Modules/^[a-z_][a-z_]*$/Repository",
              "type": "string"
            },
            "Auth": {
              "$id": "#/properties/Modules/^[a-z_][a-z_]*$/Auth",
              "type": "object",
              "required": [
                "Type",
                "Config"
              ],
              "properties": {
                "Type": {
                  "$id": "#/properties/Modules/^[a-z_][a-z_]*$/Auth/Config",
                  "type": "string",
                  "enum": [
                    "PublicKeys"
                  ]
                }
              },
              "allOf": [
                {
                  "if": {
                    "properties": {
                      "Type": {
                        "const": "PublicKeys"
                      }
                    }
                  },
                  "then": {
                    "properties": {
                      "Config": {
                        "required": [
                          "PemFile"
                        ],
                        "properties": {
                          "PemFile": {
                            "$id": "#/properties/Modules/^[a-z_][a-z_]*$/Auth/Config/PemFile",
                            "type": "string"
                          },
                          "PemFilePassword": {
                            "$id": "#/properties/Modules/^[a-z_][a-z_]*$/Auth/Config/PemFilePassword",
                            "type": "string"
                          },
                          "User": {
                            "$id": "#/properties/Modules/^[a-z_][a-z_]*$/Auth/Config/User",
                            "type": "string",
                            "default": "git"
                          },
                          "IgnoreHostKey": {
                            "$id": "#/properties/Modules/^[a-z_][a-z_]*$/Auth/Config/IgnoreHostKey",
                            "type": "boolean"
                          }
                        }
                      }
                    }
                  }
                }
              ]
            }
          }
        }
      }
    }
  }
}